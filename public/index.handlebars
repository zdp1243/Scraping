<h1>Scrape Saver</h1>

<h3>Save the Articles You Scrape!</h3>

<ul>
	{{#each tasks}}
	<li>
		<p>ID: {{this.id}}</p>
		<p>Title: {{this.title}}</p>
		<p>Summary: {{this.summary}}</p>
		<p>URL: {{this.url}}</p>
	</li>
	{{/each}}
</ul>

<form action="/" method="POST">
	<textarea type="text" name="id"></textarea>
	<textarea type="text" name="title"></textarea>
	<textarea type="text" name="summary"></textarea>
	<textarea type="text" name="url"></textarea>


	<button type="submit">Save Scrape!</button>
	<button type="delete">Delete Scrape!</button>
</form>